\mode<presentation>

% Settings
\useinnertheme{polimi}
\useoutertheme{polimi}
\usefonttheme{polimi}
\usecolortheme{polimi}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true] 

%supervisor command
\let\insertsupervisor\relax
\newcommand\supervisortitle[2]{\def\insertsupervisortitle{#1, #2}}
\newcommand\supervisor[2]{\def\insertsupervisor{#1: #2}}

% Title page command
% Title page command
\newcommand{\polimititlepage[1]}{
 \ifthenelse{\equal{#1}{polimi}} % logo polimi
 {\setbeamertemplate{backgroundpolimi}[polimi theme titlepage]
 \setbeamertemplate{footline}[polimi theme titlepage]
 \begin{frame}
 \titlepage
 \end{frame}}
 {\ifthenelse{\equal{#1}{airlab}} % logo airlab
 {\setbeamertemplate{backgroundairlab}[polimi theme titlepage]
 \setbeamertemplate{footline}[polimi theme titlepage]
 \begin{frame}
 \titlepage
 \end{frame}}
 { % else no logo
 {\setbeamertemplate{backgroundsimple}[polimi theme titlepage]
 \setbeamertemplate{footline}[polimi theme titlepage]
 \begin{frame}
 \titlepage
 \end{frame}}}
 }
}

\mode<all>